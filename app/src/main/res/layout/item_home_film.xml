<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="@dimen/margin_into_container"
    tools:context=".ui.activities.HostActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iamgeFilm"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CornerRadius10"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameFilm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="@tools:sample/full_names"/>

    <RatingBar
        android:id="@+id/rateFilm"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>